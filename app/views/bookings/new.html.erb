<div class="wraper center-middle">
  <div class="container position-relative">
    <div class="card-bike">
      <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)) %>)">
      </div>
      <div class="p-3">
      <div class="d-flex justify-content-between">
        <div>
          <h3><%= @bike.name %></h3>
          <p>Price: <span data-datepicker-target='priceDisplay'></span></p>
        </div>
        <div>
          <p><%= @bike.description %></p>
          <p><%= @bike.price %></p>
        </div>
        <script>
          console.log('Price:', <%= @bike.price.to_json %>);
        </script>
      </div>

        <div data-controller='datepicker'>
          <%= simple_form_for [@bike, @booking] do |f| %>
            <%= f.input :checkin, as: :string, input_html: { data: { datepicker_target: 'dateField', datepicker_price_value: @bike.price.to_json }, class:"border border-primary" } %>
            <%= f.button :submit, 'Create Booking', class: 'btn btn-primary my-2' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
